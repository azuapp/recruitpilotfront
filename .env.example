# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/recruitpilot

# Authentication & Security
SESSION_SECRET=your-super-secret-session-key-minimum-32-characters
NODE_ENV=production

# Server Configuration
PORT=5001

# OpenAI Configuration (Optional - for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email Configuration (Required for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
SMTP_FROM=noreply@yourcompany.com

# Rate Limiting Configuration (Optional - defaults provided)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Security Configuration (Optional - defaults provided)
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=application/pdf

# CORS Configuration (Optional - for production)
ALLOWED_ORIGINS=https://yourproductiondomain.com,https://yourdomain.com