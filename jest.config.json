{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/test"],
  "testMatch": [
    "**/__tests__/**/*.ts",
    "**/?(*.)+(spec|test).ts"
  ],
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "tsconfig": "tsconfig.test.json"
    }]
  },
  "collectCoverageFrom": [
    "server/**/*.ts",
    "client/src/**/*.{ts,tsx}",
    "!server/index.ts",
    "!**/*.d.ts",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
  "moduleNameMapping": {
    "^@shared/(.*)$": "<rootDir>/shared/$1",
    "^@/(.*)$": "<rootDir>/$1"
  },
  "testTimeout": 10000,
  "verbose": true
}
